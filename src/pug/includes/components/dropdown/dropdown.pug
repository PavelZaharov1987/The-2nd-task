include ./../btn/btn

mixin dropdown(about, option1, option2, option3)
  div.dropdown
    label(for='dropdown' data-value="")=about
    +btn('btn-more', 'button', 'expand_more')
    ul
      li(data-value='1')=option1
        .dropdown-quantity
          input(type="number" min="0" max="9" step="1" value="0")
      li(data-value='2')=option2
        .dropdown-quantity
          input(type="number" min="0" max="9" step="1" value="0")
      li(data-value='3')=option3
        .dropdown-quantity
          input(type="number" min="0" max="9" step="1" value="0") 